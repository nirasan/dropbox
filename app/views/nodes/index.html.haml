%h1 Listing nodes

%table
  %thead
    %tr
      %th id
      %th name
      %th type
      %th
      %th
      %th

  %tbody
    - @nodes.each do |node|
      %tr
        %td= node.id
        %td= node.name
        %td= node.is_folder ? "Folder" : "File"
        %td= link_to 'Show', node
        %td= link_to 'Edit', edit_node_path(node)
        %td= link_to 'Destroy', node, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

